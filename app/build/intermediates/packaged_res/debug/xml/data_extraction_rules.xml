<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="community_prefs.xml" />
        <exclude domain="database" path="community_database" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer for most data -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <!-- Exclude sensitive authentication data -->
        <exclude domain="sharedpref" path="community_prefs.xml" />
    </device-transfer>
</data-extraction-rules>
